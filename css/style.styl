@import url("http://fonts.googleapis.com/css?family=Roboto+Slab:300")
@import url("http://fonts.googleapis.com/css?family=EB+Garamond")


*
  box-sizing border-box

body
  font-family "Roboto Slab"
  margin 0

body.neatline.show

  div.exhibit
    float left
    width 60%

  div.narrative
    float right
    overflow-y scroll
    padding 5em
    width 40%
    font-weight 300
    font-size 18px

    h1.title
      margin-top 0
      font-family "EB Garamond"
      font-weight 400
      font-size 70px

    p
      line-height 26px

      &:first-of-type:first-letter
        float left
        margin 0 5px 5px 0
        font-family "EB Garamond"
        font-size 100px

    [data-neatline-slug]
      padding 3px 5px

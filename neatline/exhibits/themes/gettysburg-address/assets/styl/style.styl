@import url("http://fonts.googleapis.com/css?family=Lusitana")

body.neatline.show
  font-family Lusitana
  font-size 14px

#neatline-narrative
  background darken(white, 3%)
  width 330px

  p
    line-height 18px

  h1, h3
    margin 0

  [data-neatline-slug]
    background transparent
    padding 0

    &.highlighted
      background #ffffa9

    &.selected
      background #0080bb

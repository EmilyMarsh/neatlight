@import url("http://fonts.googleapis.com/css?family=Oswald:400,700,300")
@import url("http://fonts.googleapis.com/css?family=Roboto+Condensed:300")
@import "nprogress/nprogress.css"

*
  box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box

  ::selection
    background #006ebb
    color white

body.neatline.show

  font-size 13px
  margin 0

  font-family "Roboto Condensed"
  background darken(white, 0.5%)

  a, a:visited
    color #006ebb

    &:hover
      color lighten(#006ebb, 30%)

div.header
  margin-bottom 1em

div.exhibit

  float left
  width 65%

  background-image url("images/paper.png")

  #neatline, #neatline-map
    height 100%
    width 100%

div.narrative

  float right
  overflow-y scroll
  padding 2em
  width 310px

  border-left 1px solid darken(white, 10%)
  background darken(white, 2%)

  h1
    margin 0 0 15px
    font-family "Oswald"
    font-size 25px

  h2, h3
    margin 0

  p
    line-height 20px

[data-neatline-slug]
  background transparent
  padding 0

  &.highlighted
    background lighten(#ffffa9, 20%)

  &.selected
    background #0080bb

@import url("http://fonts.googleapis.com/css?family=Roboto+Condensed:300")

body.neatline.show
  font-family "Roboto Condensed"
  font-size 13px

#neatline
  background-image url("images/paper.png")

#neatline-narrative
  background darken(white, 2%)
  border-left 1px solid darken(white, 10%)
  width 300px

  h1
    margin-bottom 15px
    font-size 25px

  h2, h3
    margin 0

  p
    line-height 20px

  [data-neatline-slug]
    background transparent
    padding 0

    &.highlighted
      background lighten(#ffffa9, 20%)

    &.selected
      background #0080bb

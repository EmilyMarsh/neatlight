@import url("http://fonts.googleapis.com/css?family=Oswald:400,700,300")
@import url("http://fonts.googleapis.com/css?family=Roboto+Condensed:300,400")

@import "bootstrap/dist/css/bootstrap.css"
@import "nprogress/nprogress.css"

*
  box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box

  ::selection
    background #006ebb
    color white

body

  color black
  font-size 13px
  margin 0

  background darken(white, 0.5%)
  font-family "Roboto Condensed"
  font-weight 300

  a, a:visited

    color #006ebb
    font-weight 400

    &:hover
      color lighten(#006ebb, 30%)

div.container

  width auto
  margin 0
  padding 0

div.exhibit

  float left
  width 65%

  background-image url("images/paper.png")

  #neatline, #neatline-map
    height 100%
    width 100%

div.narrative

  float right
  overflow-y scroll
  padding 2em
  width 310px

  border-left 1px solid darken(white, 10%)
  background darken(white, 2%)

  div.header
    margin-bottom 1em

  h1
    margin 0 0 15px
    font-family "Oswald"
    font-size 25px
    line-height normal
    font-weight bold

  h2, h3
    margin 0

  h2.nicolay-head
    font-size 24px

  h3.nicolay-date
    font-size 18px

  p
    line-height 20px
    margin 1em 0

[data-neatline-slug]

  background transparent
  padding 0

  &.highlighted
    background lighten(#ffffa9, 20%)

  &.selected
    background #0080bb

ol.sources
  margin 1em 0
  padding 0 1em 0 2em

  li
    margin 1em 0
